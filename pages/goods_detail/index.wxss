page {
  padding: 0 8rpx 90rpx;
}
.pics_swiper {
  height: 60vw;
}
.pics_swiper .pics_item {
  display: flex;
  justify-content: center;
}
.pics_swiper .pics_item image {
  width: 60%;
}
.goods_product .goods_price {
  padding-left: 20rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--themeColor);
}
.goods_product .goods_info {
  display: flex;
}
.goods_product .goods_info .goods_info_left {
  flex: 3;
  border-right: 1px solid #666;
  padding: 10rpx 30rpx 0 0;
  margin-bottom: 10rpx;
}
.goods_product .goods_info .goods_info_right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.pic_detail .pic_detail_title {
  color: var(--themeColor);
  font-size: 35rpx;
  padding-left: 20rpx;
  border-top: 15rpx solid #eee;
  border-bottom: 15rpx solid #eee;
  padding: 10rpx 0;
}
.footer_tab {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  background-color: #fff;
  font-size: 25rpx;
}
.footer_tab .tab_item {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.footer_tab .tab_item .contact {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.footer_tab .btm_cart,
.footer_tab .btm_buy {
  padding: 20rpx 0;
  font-size: 28rpx;
  flex: 2;
  color: #fff;
}
.footer_tab .btm_cart {
  background-color: orange;
}
.footer_tab .btm_buy {
  background-color: var(--themeColor);
}
